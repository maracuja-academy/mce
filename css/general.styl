body 
    font-family: "SFUIDisplay"
    color: #2C322D
    font-smoothing()

h1
    font-family: "Montserrat-Black"
    text-align: center
    font-size: em(18)
    color:#2D62A8
    margin: rem(10px) 0
   
h2
    font-size: em(14)
    text-align: center
    margin: rem(7px) 0
    font-weight: bold

p 
    font-size: em(12)
main
    background: #99D9EC
    overflow: auto
    padding-bottom: rem(50px)
    
.container
    width: 984px
    margin: 0 auto
     
#content
    padding: rem(20)
    margin: rem(10) 0

#video
    width: 100%
    height:500px
    

i.heart
    background: url('images/heart.png') no-repeat
    width: 20px
    height: 20px
    display: inline-block
    top: 6px
    position: relative
    

@media screen and (max-width: 1024px) 
    .container
        width: 748px
    #video
        height: 300px
        
@media screen and (max-width: 768px) 
    .container
        width: 100%
    #video
        width: 100%
        height: 50vw

