/* equitation.styl */

.style-equitation 
    background-color: #F2F4E7
    #header #logo p
        background-color: #814e1f
    .bg-grass
        background-image: url(images/bg-grass-equit2.jpg)
    .bg-halo
        background-image: url(images/bg-blue.jpg)
        background-color: #153e68
    section.bg-white h2 
        color: blue
    section.bg-white h3
        color: red
    #section-book
        background-image: url(images/bg-grass-equit.jpg)  
        
    #section-collaboration
        img
           display: inline-block 
        .row
            text-align: left
        .detail
            margin-left: rem(10)
            max-width: rem(300)
            display: inline-block

    h3
        background-color: #E1372F
        border-radius: rem(30);
        color: white
        text-transform: uppercase
        font-family: SFUIDisplay
        padding: rem(8) rem(15) rem(6) rem(15)
        display: inline-block
        margin-bottom: 0
        margin-left: 0
        font-size: em(14)
        
    #section-content
        color:white 
        .col-4
            text-align: right
            height: rem(105)
            background-repeat:no-repeat!important
            padding: rem(25) 0 0
        h3
            background-color: rgba(44,50,45,0.1)  
            color:white 
            margin-top: rem(65)
        .dwh
            background: url(images/equitation/content_dwh.png) #4A3A36
        .mouth
            background: url(images/equitation/content_mouth.png) #F3A84B
        .maths, .francais
            h3
                bottom: rem(15);
                position: relative;
                margin-top: rem(8);
        .maths
            background: #E1372F  
            i
                color: red
                
        .francais
            background: blue_bg
            i
                color: blue
                
        .leprevost
            background: url(images/equitation/content_leprevost.png) #2F3726 
        .foot
            background: url(images/equitation/content_foot.png) #37ACA4

        i
            font-size: em(24)
        p
            margin: 0 0 0 rem(20)
            text-align: left


