    .member
        display: inline-block
        border-radius: rem(200)
        height: rem(200)
        width: rem(200)
        background-repeat: no-repeat
        color: white
        
    .member:hover
        .bg, p
            opacity: 1


#section-axes .img-container
    height: 100px

