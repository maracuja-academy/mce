.social 
    text-align: center;

.social p
    font-size: 0.7em
.social .fb-like, .social .twitter-share-button
    display: inline-block;

.social .fb-like >span
    height: 28px!important;

.twitter-share-button 
    margin-left: 10px;



@media only screen and (max-width: 45em) 
    #section-book 
        .vertical-container
            text-align: center
            height : inherit!important
            display: block
    #menu
        background:transparent
        a.button
            margin-top: rem(170)
            margin-right: 34%
        nav a
            display: block; 
        nav
            height: 0; padding-top: 0
        .hamburger
            background-color: white;
            background-image: url(images/menu.png);
            background-repeat: no-repeat; 
            background-position: center;
            border-radius: 4px;
            width: 45px;
            height: 40px;
            cursor: pointer;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 2;
        .close
            background-image: url(images/menu-close.png)
            background-repeat: no-repeat;
            width: 40px
            height: 40px
    
        &.menu-opened 
            nav
                height: inherit
                z-index: 1
                padding: rem(10) 0
                position: absolute
            a:after
                content: ""
            .hamburger
                background-image: url(images/menu-close.png);
    .fixed
        #menu
            a.button
                top: rem(10)
                right: rem(10)
                margin-top: 0
                margin-right: 0
                position: fixed
            &.menu-opened nav
                padding: rem(45) 0 rem(10) 0
                position: fixed

