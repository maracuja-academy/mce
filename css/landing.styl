h2
    font-family: "Montserrat-Black"
    font-size: em(26)
    line-height: em(20)
h3
    font-family: "Montserrat"
    margin-top: rem(15)

p
    margin: em(10);
    font-size: em(16)

        

#menu 
    
    nav 
        position: absolute
        background: white
        width: 1024px
        margin: 0 auto
        background: white
        text-align: center
        top: 149px
        width: 100%
        overflow: hidden
        height: 45px
        padding-top: 4px
        z-index: 10
        border-bottom: 1px solid #F9F9F9
        a
            color: #2D62A8;
            font-size: em(18);
            font-family: "Montserrat";
            line-height: 35px;
            display: inline-block;
            cursor: pointer;

            &:after 
                content:"â€¢";
                width: 7px;
                height: 7px;
                color: #E3EFF9;
                margin: 10px 10px;
                font-size: 1.3em;

            &:last-child:after
                content: ""
            &:hover, &.active, &:focus
                color:#7CC247;
    a.button
        position: absolute
        z-index: 11
        top: rem(5)
        right: rem(5)
        padding-left : 5px
        padding-right : 5px

.fixed 
    #menu 
        a.button
            position: fixed
        nav
            position: fixed
            top : 0
    #content
        margin-top: 50px



section{
    padding: rem(70) rem(20) rem(70) rem(20);
    text-align: center;
}

section:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}



.entry-content{
    margin-top: 0;
}
.button, input[type=button]{
    -webkit-appearance: none;
    line-height: rem(25)
    color: white;
    display: inline-block;
    text-align: center;
    margin: 0 auto;
    font-family: montserrat;
    font-weight: bold;
    text-align: center;
    padding: rem(7) rem(45) rem(5) rem(45);
    border-radius: 10px;
    box-shadow: -4px 4px 0 #CD2027!important;
    background-color: #E1372F!important;
    border:0;
}
 .button:hover, .button:focus,.nf-form-layout input[type=button]:hover,.nf-form-layout input[type=submit]:focus{
    background-color: #CD2027;
    border:0;
    font-weight: bold
    color:white
}

