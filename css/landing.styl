@media only screen and (max-width: 45em) 

    #menu
        background:transparent;
        nav a
            display: block; 
        nav
            height: 0; padding-top: 0
        .hamburger
            background-color: white;
            background-image: url(images/menu.png);
            background-repeat: no-repeat; 
            background-position: center;
            border-radius: 4px;
            width: 45px;
            height: 40px;
            cursor: pointer;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 2;
        .close
            background-image: url(images/menu-close.png)
            background-repeat: no-repeat;
            width: 40px
            height: 40px
    
        &.menu-opened nav
            height: inherit
            padding: 10px
            position: fixed
            z-index: 1
        &.menu-opened .hamburger
            background-image: url(images/menu-close.png);
    

