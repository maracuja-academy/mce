#menu nav 
    background: white
    width: 1024px
    margin: 0 auto
    background: white
    text-align: center
    top: 0
    width: 100%
    overflow: hidden
    height: 45px
    padding-top: 4px
    z-index: 10
    border-bottom: 1px solid #F9F9F9


.fixed #menu nav{position: fixed;}
.fixed #content{margin-top: 50px;}
.menu-opened nav{position: relative; }
#menu nav a{
    color: #2D62A8;
    font-size: 0.8em;
    font-family: "Montserrat";
    line-height: 35px;
    display: inline-block;
    cursor: pointer;
}

#menu a:after {
    content:"â€¢";
    width: 7px;
    height: 7px;
    color: #E3EFF9;
    margin: 10px 10px;
    font-size: 1.3em;
}
#menu nav a:last-child:after{content: ""}
#menu a:hover, #menu a.active, #menu a:focus{color:#7CC247;}


section{
    padding: rem(70) rem(20) rem(50) rem(20);
    text-align: center;
}

section:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
section { display: inline-block; }
/* start commented backslash hack \*/
* html section { height: 1%; }
section { display: block; }
/* close commented backslash hack */

.entry-content{
    margin-top: 0;
}
section .button, input[type=button]{
    color: white;
    display: inline-block;
    text-align: center;
    line-height: 40px;
    margin: 0 auto;
    font-family: montserrat;
    font-weight: bold;
    text-align: center;
    padding: 5px 45px;
    border-radius: 10px;
    box-shadow: -4px 4px 0 #CD2027!important;
    background-color: #E1372F!important;
    border:0;
}
section .button:hover, section .button:focus,.nf-form-layout input[type=button]:hover,.nf-form-layout input[type=submit]:focus{
    background-color: #CD2027;
    border:0;
    font-weight: bold
    color:white
}

