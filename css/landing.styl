/* landing.styl */

#landing
    p
        margin: em(10) 0;
    h2
        margin-bottom: rem(30)
#menu 
    nav 
        position: relative
        background: white
        width: 1024px
        margin: 0 auto
        background: white
        text-align: center
        width: 100%
        overflow: hidden
        height: 45px
        padding-top: 4px
        z-index: 10
        border-bottom: 1px solid #F9F9F9
        a
            color: #2D62A8;
            font-size: em(18);
            font-family: "Montserrat";
            line-height: 35px;
            display: inline-block;
            cursor: pointer;

            &:after 
                content:"â€¢";
                width: 7px;
                height: 7px;
                color: #E3EFF9;
                margin: 10px 10px;
                font-size: 1.3em;

            &:last-child:after
                content: ""
            &:hover, &.active, &:focus
                color:#7CC247;
    a.button
        position: absolute
        z-index: 11
        top: rem(5)
        right: rem(5)
        padding-left : 5px
        padding-right : 5px

.fixed 
    #menu 
        a.button
            position: fixed
        nav
            position: fixed
            top : 0
    #content
        margin-top: 50px







.entry-content{
    margin-top: 0;
}
.button, input[type=button]{
    -webkit-appearance: none;
    line-height: rem(25)
    color: white;
    display: inline-block;
    text-align: center;
    margin: 0 auto;
    font-family: montserrat;
    font-weight: bold;
    text-align: center;
    padding: rem(7) rem(45) rem(5) rem(45);
    border-radius: 10px;
    box-shadow: -4px 4px 0 #CD2027!important;
    background-color: #E1372F!important;
    border:0;
}
 .button:hover, .button:focus,.nf-form-layout input[type=button]:hover,.nf-form-layout input[type=submit]:focus{
    background-color: #CD2027;
    border:0;
    font-weight: bold
    color:white
}

section.separator
    background-image: url(images/separator.png);
    background-size: 100% 22px;
    background-position: center bottom;
    background-repeat: no-repeat;


section.bg-white
    background-color: white;
    color:black_text;


section.bg-beige
    background-color: #F2F4E7
    color:black_text

    


section.bg-white em
    font-size: 0.7em; 

.bg-grass
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #7CC247;
    background-position: center bottom;
    color:white;


section.bg-grass a{color:white;}
section.bg-grass h3{color:white; text-align: center;}
section.bg-halo
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50% 50%;
    color:white;


section.bg-blue
    #content 
        text-align: left
    
