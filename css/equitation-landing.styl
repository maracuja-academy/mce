@media screen and (max-width: 45em)
     
    #equitation-landing
        #bg-sky
            background-size: 200% 30%!important;
            background-position: left bottom;
        #section-intro
            .video
                iframe
                    width: 100%;
                    height: 50vw;  
        #section-noel
            
            .couv-noel
                text-align: center
            .offer
                text-align:center
                div
                    background-color : white
                    border-radius(85px)
                    text-align: center
                    width : 130px
                    height : 160px
                    padding: 0 20px;
                    margin: 13px auto 0 auto;
                .button
                    position:relative
                    float : none
        #section-why
            .col-4
                p
                    margin: 0 0 0 30px;
                &:before
                    margin-left : 0px
                    display:block
                    top: -3px;
                
    #footer-equitation
        background-size: auto;
        background-position: left bottom;
        .col-3
            width: 100%
        #menu-footer
            margin-top : 0
        li
            height : 30px
            display: block;
            &:after 
                content:""
